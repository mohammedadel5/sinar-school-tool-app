{
  "name": "sinar-school-tool-app",
  "version": "0.1.8",
  "productName": "Sinar School Tool",
  "description": "Sinar School Tool â€” Offline management for students, teachers, classes & sections",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "gen:ico": "node scripts/gen-ico.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "jimp": "^0.22.12",
    "sharp": "^0.33.5",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.sinar.schooltool",
    "productName": "Sinar School Tool",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/db/schema.sql",
        "to": "db/schema.sql"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Office",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sinar School Tool"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.exe"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mohammedadel5",
        "repo": "sinar-school-tool-app"
      }
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@4.10.3"
}
